{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/types/**/*.d.ts",
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "tsBuildInfoFile": "../dist/app/app.tsbuildinfo",
    "composite": true,
